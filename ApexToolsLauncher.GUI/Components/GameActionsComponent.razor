@inherits MudComponentBase;

<MudStack Row="@true" AlignItems="AlignItems.Center" Wrap="Wrap.Wrap" Class="@Class">
  <MudStack Spacing="0">
    <MudText Typo="Typo.h4" Style="line-height: var(--mud-typography-h6-lineheight)">@(GameConfig.Title)</MudText>
    <ModProfileSelect GameId="@GameId" ProfileChanged="@OnProfileChanged" Style="min-width: 20rem"/>
  </MudStack>
  
  <MudSpacer/>
  
  <MudButton
    Variant="Variant.Filled"
    StartIcon="@Icons.Material.Filled.RocketLaunch"
    Color="Color.Primary"
    OnClick="@OnLaunch"
  >
    Launch
  </MudButton>
</MudStack>
