@inherits MudComponentBase

<MudCard Class="@Class" Style="@Style">
  <MudCardHeader Class="pb-0">
    <CardHeaderContent>
      <MudText Typo="Typo.h5">Game to Euler</MudText>
    </CardHeaderContent>
      
    <CardHeaderActions>
    </CardHeaderActions>
  </MudCardHeader>

  <MudCardContent>
    <MudGrid>
      <MudItem xs="4">
        <MudStack Spacing="2">
          <MudTextField
            T="float"
            Label="X1"
            @bind-Value="@(Input.A.X)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="float"
            Label="Y1"
            @bind-Value="@(Input.B.X)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="float"
            Label="Z1"
            @bind-Value="@(Input.C.X)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="float"
            Label="W1"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />
        </MudStack>
      </MudItem>

      <MudItem xs="4">
        <MudStack Spacing="2">
          <MudTextField
            T="float"
            Label="X2"
            @bind-Value="@(Input.A.Y)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="float"
            Label="Y2"
            @bind-Value="@(Input.B.Y)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="float"
            Label="Z2"
            @bind-Value="@(Input.C.Y)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="float"
            Label="W2"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />
        </MudStack>
      </MudItem>

      <MudItem xs="4">
        <MudStack Spacing="2">
          <MudTextField
            T="float"
            Label="X3"
            @bind-Value="@(Input.A.Z)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="float"
            Label="Y3"
            @bind-Value="@(Input.B.Z)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="float"
            Label="Z3"
            @bind-Value="@(Input.C.Z)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="float"
            Label="W3"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />
        </MudStack>
      </MudItem>

      <MudItem xs="12">
        <MudDivider/>
      </MudItem>

      <MudItem xs="12">
        <MudTextField
          T="string"
          Label="Rotation"
          Value="@Calculate()"
          Margin="Margin.Dense"
          Variant="Variant.Outlined"
        />
      </MudItem>

      <MudItem xs="4">
        <MudStack Spacing="2">
          <MudTextField
            T="string"
            Label="Pitch"
            Value="@Format(Pitch)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="string"
            Label="Yaw"
            Value="@Format(Yaw)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />

          <MudTextField
            T="string"
            Label="Roll"
            Value="@Format(Roll)"
            Margin="Margin.Dense"
            Variant="Variant.Outlined"
          />
        </MudStack>
      </MudItem>
      
      <MudItem xs="8">
        <MudPaper Outlined="@true" Class="rounded-xl">
          <MudImage Src="images/pyr_example.png" Style="width: 100%"/>
        </MudPaper>
      </MudItem>
    </MudGrid>
  </MudCardContent>
</MudCard>