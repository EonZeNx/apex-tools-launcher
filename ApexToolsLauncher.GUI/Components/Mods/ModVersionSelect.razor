@inherits MudComponentBase
@using ApexToolsLauncher.Core.Libraries

<MudSelect
  T="@string"
  Label="Version"
  Variant="Variant.Outlined"
  Value="@Version"
  ValueChanged="@OnVersionChanged"
  Margin="Margin.Dense"
  FullWidth="@true"
  Class="flex-grow-0 mt-1"
>
  <MudSelectItem Value="@ConstantsLibrary.InvalidString" Style="font-style: italic">Off</MudSelectItem>
  @foreach (var (versionKey, versionConfig) in ModConfig.Versions)
  {
    <MudSelectItem Value="@versionKey">@(versionConfig.Title)</MudSelectItem>
  }
</MudSelect>
