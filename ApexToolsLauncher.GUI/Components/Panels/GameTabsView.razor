@inherits MudComponentBase

<ApexTabs
  Elevation="0"
  Rounded="true"
  Centered="true"
  Outlined="true"
  Class="@($"mud-elevation-2 {Class}")"
  Style="@Style"
>
  <ApexTabPanel Text="Mods" BadgeData="@($"{EnabledModCount}")" BadgeColor="BadgeColour">
    <ModsTabPanel
      GameId="@GameId"
      ProfileId="@ProfileId"
      Style="@PanelStyle"
    />
  </ApexTabPanel>

  <ApexTabPanel Text="Launch args" BadgeData="@($"{EnabledLaunchArgumentCount}")" BadgeColor="BadgeColour">
    <LaunchArgsTabPanel
      GameId="@GameId"
      ProfileId="@ProfileId"
      Style="@PanelStyle"
    />
  </ApexTabPanel>

  <ApexTabPanel Text="Profiles" Style="height: 100%">
    <ProfilesTabPanel
      GameId="@GameId"
      ProfileId="@ProfileId"
      Style="@PanelStyle"
    />
  </ApexTabPanel>
</ApexTabs>
