@inherits MudComponentBase

<ApexTabs
  Elevation="2"
  Rounded="true"
  Centered="true"
  Color="Color.Primary"
  ApplyEffectsToContainer="true"
  Class="@Class"
  Style="@Style"
  PanelStyle="height: 100%"
>
  <ApexTabPanel Text="Mods" Style="height: 100%">
    <ModsTabPanel
      GameId="@GameId"
      ProfileId="@ProfileId"
      Style="height: 100%"
    />
  </ApexTabPanel>

  <ApexTabPanel Text="Launch args" Style="height: 100%">
    <LaunchArgsTabPanel
      GameId="@GameId"
      ProfileId="@ProfileId"
      Style="height: 100%"
    />
  </ApexTabPanel>

  <ApexTabPanel Text="Profiles" Style="height: 100%">
    <ProfilesTabPanel
      GameId="@GameId"
      ProfileId="@ProfileId"
      Style="height: 100%"
    />
  </ApexTabPanel>
</ApexTabs>
