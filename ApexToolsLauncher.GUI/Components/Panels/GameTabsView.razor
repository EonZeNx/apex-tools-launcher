@inherits MudComponentBase

<ApexTabs
  Elevation="0"
  Rounded="true"
  Centered="true"
  Outlined="true"
  Class="@($"mud-elevation-2 {Class}")"
  Style="@Style"
  PanelStyle="height: 100%"
>
  <ApexTabPanel Text="Mods" BadgeData='"0"' BadgeColor="BadgeColour" Style="height: 100%">
    <ModsTabPanel
      GameId="@GameId"
      ProfileId="@ProfileId"
      Style="height: 100%"
    />
  </ApexTabPanel>

  <ApexTabPanel Text="Launch args" BadgeData='"0"' BadgeColor="BadgeColour" Style="height: 100%">
    <LaunchArgsTabPanel
      GameId="@GameId"
      ProfileId="@ProfileId"
      Style="height: 100%"
    />
  </ApexTabPanel>

  <ApexTabPanel Text="Profiles" Style="height: 100%">
    <ProfilesTabPanel
      GameId="@GameId"
      ProfileId="@ProfileId"
      Style="height: 100%"
    />
  </ApexTabPanel>
</ApexTabs>
