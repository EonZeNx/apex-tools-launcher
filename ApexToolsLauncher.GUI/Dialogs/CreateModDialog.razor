@using ApexToolsLauncher.Core.Config.GUI

<MudDialog Class="flex-grow-1" DefaultFocus="DefaultFocus.FirstChild">
  <DialogContent>
    <MudStack>
      <MudTextField
        T="string"
        Label="Mod ID"
        @bind-Value="@ModId"
        Immediate="@true"
        Variant="@Variant.Outlined"
        Margin="Margin.Dense"
        Error="@(!ModIdValid())"
      />
      <MudTextField
        T="string"
        Label="Title"
        @bind-Value="@ModConfig.Title"
        Immediate="@true"
        Variant="@Variant.Outlined"
        Margin="Margin.Dense"
        Error="@(!TitleValid())"
      />
      <MudTextField
        T="string"
        Label="Description"
        @bind-Value="@ModConfig.Description"
        Immediate="@true"
        Variant="@Variant.Outlined"
        Margin="Margin.Dense"
        Lines="3"
        AutoGrow="@true"
      />
      
      <MudSelect
        Label="Type"
        Variant="Variant.Outlined"
        @bind-Value="@(ModConfig.Type)"
        Margin="Margin.Dense"
        FullWidth="@true"
      >
        @foreach (var value in Enum.GetValues<ModType>())
        {
          <MudSelectItem Value="@(value)">@(value)</MudSelectItem>
        }
      </MudSelect>
    </MudStack>
  </DialogContent>

  <DialogActions>
    <MudButton
      OnClick="@Close"
      Variant="Variant.Outlined"
    >Close</MudButton>
    <MudButton
      OnClick="@Confirm"
      Variant="Variant.Filled"
      Color="@Color.Primary"
      Disabled="@(!DialogValid())"
    >Confirm</MudButton>
  </DialogActions>
</MudDialog>
