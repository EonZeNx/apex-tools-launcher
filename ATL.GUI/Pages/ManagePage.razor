@page "/"
@page "/manage"
@using ATL.Core.Libraries
@inherits MudComponentBase

<div class="mt-4">
  <GameCardsComponent GameChanged="@SelectedGameChanged"/>

  <MudGrid Class="mt-4" Spacing="3">
    <MudItem xs="12" Class="pb-0">
      <GameActionsComponent GameId="@GameId" ProfileChanged="@SelectedProfileChanged"/>
    </MudItem>
    
    <MudItem xs="4">
      <ModListCard GameId="@GameId" ModId="@ModId" Height="15rem" SelectionChanged="@SelectedModChanged"/>
    </MudItem>

    <MudItem xs="8">
      @if (!string.Equals(ModId, ConstantsLibrary.InvalidString))
      {
        <ModCard GameId="@GameId" ModId="@ModId"/>
      }
      else
      {
        <MudPaper Width="100%" Height="100%">
          <MudText>No mod selected</MudText>
        </MudPaper>
      }
    </MudItem>
  </MudGrid>
</div>
