@page "/"
@page "/manage"
@inherits MudComponentBase

<div class="mt-4">
  <GameCardsComponent SelectedGameChanged="@OnGameCardClicked"/>

  <MudGrid Class="mt-4" Spacing="3">
    <MudItem xs="12" Class="pb-0">
      <GameActionsComponent GameId="@GameId"/>
    </MudItem>
    
    <MudItem xs="4">
      <ModListCard GameId="@GameId" Height="15rem" SelectionChanged="@SelectedModChanged"/>
    </MudItem>

    <MudItem xs="8">
      <ModCard GameId="@GameId" ModId="@ModId"/>
    </MudItem>
  </MudGrid>
</div>
